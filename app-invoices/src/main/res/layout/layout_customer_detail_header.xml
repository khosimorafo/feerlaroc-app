<?xml version="1.0" encoding="utf-8"?>
<com.feerlaroc.invoices.view.CustomerDetailHeaderView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/layout_customer_detail_header">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="1">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_contact"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_account_black_48dp"
            android:layout_marginStart="@dimen/activity_vertical_margin_8dp"
            android:layout_centerHorizontal="true"
            app:civ_border_color="@color/colorAccent"
            app:civ_border_width="1dp"
            />

        <TextView
            android:layout_below="@+id/image_contact"
            android:id="@+id/text_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/contact_name"
            android:textSize="@dimen/text_title"/>

    </RelativeLayout>

</com.feerlaroc.invoices.view.CustomerDetailHeaderView>