<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <org.feerlaroc.widgets.FeerlarocToolBar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.ActionMenuView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/action_menu_view_left"
                android:gravity="start"
                android:layout_alignParentStart="true"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/action_button_text"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

    </org.feerlaroc.widgets.FeerlarocToolBar>

    <org.feerlaroc.widgets.ProgressLayout
        android:id="@+id/progress_layout"
        style="@style/ProgressToolbarDefault"
        android:layout_width="match_parent"
        android:background="@android:color/transparent"
        android:tag="progressLayout"

        android:layout_height="24dp"/>


</LinearLayout>